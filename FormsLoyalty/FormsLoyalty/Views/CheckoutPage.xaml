<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:prism="http://prismlibrary.com"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             xmlns:resources="clr-namespace:FormsLoyalty"
             xmlns:controls1="clr-namespace:FormsLoyalty.Controls"
             xmlns:converters="clr-namespace:FormsLoyalty.Converters"
             xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin"
             xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             xmlns:material="clr-namespace:XF.Material.Forms.UI;assembly=XF.Material"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="FormsLoyalty.Views.CheckoutPage"
             BackgroundColor="WhiteSmoke"
             Title="{x:Static resources:AppResources.ActionbarCheckout}">
   
    
    <ContentPage.Resources>
        <converters:BytesToImageSource x:Key="BytesToImageSource"/>
        <converters:StringToBoolConverter x:Key="StringToBoolConverter"/>
        <converters:StepColorConverter x:Key="StepColorConverter"/>
        <converters:StepImageConverter x:Key="StepImageConverter"/>
        <xct:IsNotNullOrEmptyConverter x:Key="IsNotNullOrEmptyConverter"/>
    </ContentPage.Resources>


    <AbsoluteLayout>
        

        <Grid RowDefinitions="100,*"
              AbsoluteLayout.LayoutBounds="0,0,1,1"
              AbsoluteLayout.LayoutFlags="All">
            <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
                  ColumnSpacing="0" Padding="10,10,20,10"
                  
                  RowDefinitions="Auto,Auto"
                  ColumnDefinitions="Auto,*,Auto"
                  BackgroundColor="White">


                <Grid WidthRequest="20" Grid.Column="0"
                  x:Name="addresstrackergrid"
                  HorizontalOptions="CenterAndExpand" VerticalOptions="Start"
                  Padding="0"
                  Margin="0,10,0,0" RowSpacing="1" ColumnSpacing="0"
                  RowDefinitions="Auto"
                  ColumnDefinitions="Auto">

                    <yummy:PancakeView CornerRadius="{OnPlatform iOS='10', Android='20'}"
                                      HeightRequest="20" WidthRequest="20"
                                      
                                      IsClippedToBounds="True"
                                      BorderColor="Black"
                                      BackgroundColor="#127ABF">

                        <Image Aspect="AspectFill" Margin="4" x:Name="addresstrackergridimage"/>

                    </yummy:PancakeView>

                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Tapped="StepTapped_Tapped"/>
                </Grid.GestureRecognizers>

                </Grid>

                <ProgressBar VerticalOptions="{OnPlatform iOS='CenterAndExpand', Android='FillAndExpand'}"
                         HorizontalOptions="FillAndExpand"
                         Margin="0,10,0,0"
                         x:Name="progress"
                         IsVisible="{Binding IsNotLast}"
                         ProgressColor="#127ABF"
                         Grid.Column="1" Grid.Row="0"
                         />

                <Grid WidthRequest="20" Grid.Column="2"
                      HorizontalOptions="CenterAndExpand" VerticalOptions="Start"
                      Padding="0"
                      Margin="0,10,0,0" RowSpacing="1" ColumnSpacing="0"
                      RowDefinitions="Auto"
                      ColumnDefinitions="Auto">

                    <yummy:PancakeView CornerRadius="{OnPlatform iOS='10', Android='20'}"
                                      HeightRequest="20" WidthRequest="20"
                                      x:Name="reviewtrackergrid"
                                      IsClippedToBounds="True"
                                      BorderColor="Black"
                                      BackgroundColor="Silver">

                        <Image Aspect="AspectFill" Margin="4"
                           Source="{Binding Status,Converter={StaticResource StepImageConverter}}"/>

                    </yummy:PancakeView>

                </Grid>


                <Label Text="Address Details"
                   
                   FontSize="Body"
                   TextColor="#333333"
                   VerticalOptions="Start"
                   HorizontalOptions="Start"
                   Grid.ColumnSpan="2" Grid.Row="2"/>

                <Label Text="Checkout"
                   
                   FontSize="Body"
                   TextColor="#333333"
                   VerticalOptions="Start"
                   HorizontalOptions="End"
                   LineBreakMode="WordWrap"
                   Grid.Column="1" 
                   Grid.ColumnSpan="2"
                   Grid.Row="2"/>

            </Grid>

            <ScrollView Grid.Row="1" VerticalScrollBarVisibility="Never">
                <Grid>
                    
                    <!--#region Address View-->

                    <StackLayout x:Name="addressStackView" Padding="10,10,5,10">


                        <controls1:ContentPageTitleView StepperContentPageTitle="{x:Static resources:AppResources.CheckoutViewShippingAddress}"
                                                        Margin="0,5,0,0"/>

                        

                        <controls1:ExtendedDropdown ItemSource="{Binding addresses}"
                                           
                                           DisplayMemberPath="Address1"
                                           SelectedItem="{Binding selectedAddress}"
                                           PlaceholderText="{x:Static resources:AppResources.txtSelectAddress}"
                                           Title="{x:Static resources:AppResources.txtSelectAddress}"/>


                        <controls1:ContentPageTitleView StepperContentPageTitle="{x:Static resources:AppResources.txtAddressDetails}"
                                       Margin="0,10,0,0"/>

                        

                        <Label>
                            <Label.Triggers>
                                <DataTrigger TargetType="Label" Binding="{Binding selectedAddress.LineNO}"
                             Value="0">
                                    <Setter Property="IsVisible" Value="false"/>
                                </DataTrigger>
                            </Label.Triggers>

                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{x:Static resources:AppResources.txtNote}" TextColor="Red"/>

                                    <Span Text=" "/>
                                    <Span  Text="{x:Static resources:AppResources.CheckoutAddressNote}"/>

                                </FormattedString>
                            </Label.FormattedText>

                        </Label>

                        <StackLayout IsEnabled="False" Opacity="0.5" x:Name="addressStack">
                            <StackLayout.Triggers>
                                <DataTrigger TargetType="StackLayout" Binding="{Binding selectedAddress.LineNO}"
                             Value="0">
                                    <Setter Property="IsEnabled" Value="True"/>
                                    <Setter Property="Opacity" Value="1"/>
                                </DataTrigger>
                            </StackLayout.Triggers>

                            <controls1:ExtendedEntry Title="{x:Static resources:AppResources.CheckoutViewName}" 
                                                     PlaceholderText="{x:Static resources:AppResources.CheckoutViewName}"
                                                     Text="{Binding shippingAddressName}"
                                                     IsError="{Binding IsNameErrorVisible}"
                                                     ErrorText="{x:Static resources:AppResources.ApplicationRequired}"
                                                     HorizontalOptions="FillAndExpand"
                                                     KeyboardType="Default"
                                                     x:Name="userName"/>

                            <controls1:ExtendedDropdown ItemSource="{Binding Cities}"
                                           IsError="{Binding IsCityErrorVisible}"
                                           ErrorText="{x:Static resources:AppResources.ApplicationRequired}"           
                                           DisplayMemberPath="City"
                                           SelectedItem="{Binding SelectedCity}"
                                           PlaceholderText="{x:Static resources:AppResources.AccountInformationViewCity}"
                                           Title="{x:Static resources:AppResources.AccountInformationViewCity}"/>

                            <controls1:ExtendedDropdown ItemSource="{Binding Areas}"
                                           DisplayMemberPath="Area"
                                           ErrorText="{x:Static resources:AppResources.ApplicationRequired}"   
                                           IsError="{Binding IsAreaErrorVisible}"             
                                           Opacity="1"
                                           SelectedItem="{Binding SelectedArea}"
                                           PlaceholderText="{x:Static resources:AppResources.txtArea}"
                                           Title="{x:Static resources:AppResources.txtArea}">
                                 <controls1:ExtendedDropdown.Triggers>
                                         <DataTrigger TargetType="controls1:ExtendedDropdown" Binding="{Binding SelectedCity,Converter={StaticResource IsNotNullOrEmptyConverter},TargetNullValue=false,FallbackValue=false}"
                                                  Value="false">
                                             <Setter Property="IsEnabled" Value="False"/>
                                             <Setter Property="Opacity" Value="0.5"/>
                                         </DataTrigger>
                        </controls1:ExtendedDropdown.Triggers>
                    </controls1:ExtendedDropdown>


                            <controls1:ExtendedEntry Title="{x:Static resources:AppResources.txtNumber}" 
                                                     PlaceholderText="{x:Static resources:AppResources.txtNumber}"
                                                     Text="{Binding shippingAddress.Number}"
                                                     IsError="{Binding IsNumberErrorVisible}"
                                                     ErrorText="{x:Static resources:AppResources.ApplicationRequired}"
                                                     HorizontalOptions="FillAndExpand"
                                                     KeyboardType="Default"
                                                     x:Name="AddressOne"/>

                            <controls1:ExtendedEntry Title="{x:Static resources:AppResources.txtStreet}" 
                                                     PlaceholderText="{x:Static resources:AppResources.txtStreet}"
                                                     Text="{Binding shippingAddress.Street}"
                                                     IsError="{Binding IsStreetErrorVisible}"
                                                     ErrorText="{x:Static resources:AppResources.ApplicationRequired}"
                                                     HorizontalOptions="FillAndExpand"
                                                     KeyboardType="Default"/>

                            <controls1:ExtendedEntry Title="{x:Static resources:AppResources.txtFloorNo}" 
                                                     PlaceholderText="{x:Static resources:AppResources.txtFloorNo}"
                                                     Text="{Binding shippingAddress.FloorNo}"
                                                     IsError="{Binding IsFloorErrorVisible}"
                                                     ErrorText="{x:Static resources:AppResources.ApplicationRequired}"
                                                     HorizontalOptions="FillAndExpand"
                                                     KeyboardType="Default"/>


                            <controls1:ExtendedEntry Title="{x:Static resources:AppResources.txtAprtNo}" 
                                                     PlaceholderText="{x:Static resources:AppResources.txtAprtNo}"
                                                     Text="{Binding shippingAddress.ApartmentNo}"
                                                     IsError="{Binding IsApartmentErrorVisible}"
                                                     ErrorText="{x:Static resources:AppResources.ApplicationRequired}"
                                                     HorizontalOptions="FillAndExpand"
                                                     KeyboardType="Default"/>

                        </StackLayout>

                        <controls1:ContentPageTitleView StepperContentPageTitle="{x:Static resources:AppResources.CheckoutViewPaymentOptions}"
                                       Margin="0,10,0,0"/>



                        <RadioButton TextColor="{StaticResource My_Button_Color}" FlowDirection="LeftToRight"
                     FontSize="Body" 
                     x:Name="cod"
                     ControlTemplate="{StaticResource ThemeRadioTemplate}"
                     Content="{x:Static resources:AppResources.CheckoutViewPayOnDelivery}"
                     IsChecked="True"
                     GroupName="payment"/>



                        <RadioButton  FontSize="Body" TextColor="{StaticResource My_Button_Color}" FlowDirection="LeftToRight"
                      IsChecked="{Binding IsVisaOnDelivery}"
                      ControlTemplate="{StaticResource ThemeRadioTemplate}"
                      Content="{x:Static resources:AppResources.CheckoutViewPayCreditOnDelivery}"
                      x:Name="visadelivery"
                      GroupName="payment"/>


                        <Button Text="{x:Static resources:AppResources.ApplicationNext}"
                    Margin="10" Visual="Material"
                    Clicked="NextBtn_Clicked"
               BackgroundColor="{StaticResource My_Button_Color}"
           
           FontSize="Medium"
            />

                    </StackLayout>
                    <!--#endregion-->


                    <!--#region Order View-->
                    <StackLayout x:Name="reviewstackview" IsVisible="false" Visual="Material">

                        <StackLayout.Resources>
                            <converters:BytesToImageSource x:Key="BytesToImageSource"/>
                            <converters:StringToBoolConverter x:Key="StringToBoolConverter"/>
                        </StackLayout.Resources>
                        <controls1:ContentPageTitleView StepperContentPageTitle="{x:Static resources:AppResources.ActionbarItems}"
                                       Margin="10,0"/>

                       

                        <StackLayout BindableLayout.ItemsSource="{Binding basketItems}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Frame Padding="10">
                                        <Grid >
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>




                                            <controls:CircleImage Source="{Binding Image.Location}"
                                                      Aspect="AspectFill"
                                                      WidthRequest="60"
                                                      BorderThickness="0.4"
                                                      BorderColor="Silver"
                                                      HeightRequest="60"
                                                      Grid.RowSpan="2"
                                                      Grid.Column="0"/>

                                            <StackLayout Grid.Row="0" Grid.Column="1">


                                                <Label Text="{Binding ItemDescription}"
                                       TextColor="Black" FontSize="Body" MaxLines="2" LineBreakMode="TailTruncation"
                                       Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"/>

                                                <Label Text="{Binding DiscountAmount,StringFormat='Discount: {0:F2}'}" TextColor="Red">
                                                    <Label.Triggers>
                                                        <DataTrigger TargetType="Label" Binding="{Binding DiscountAmount}" Value="0">
                                                            <Setter Property="IsVisible" Value="false"/>
                                                        </DataTrigger>
                                                    </Label.Triggers>
                                                </Label>

                                            </StackLayout>

                                            <Label Text="{Binding Quantity,StringFormat={x:Static resources:AppResources.ApplicationQtyN,'{0:N0}'}}"
                                      
                                       FontSize="Small" Grid.Row="1" Grid.Column="1"/>

                                            <Label Text="{Binding Amount,StringFormat='EGP {0:F2}'}" HorizontalOptions="End"
                                       TextColor="Black"
                                       FontSize="Small" Grid.Row="1" Grid.Column="2"/>

                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>




                        <StackLayout x:Name="emailStack" IsVisible="False">
                            <StackLayout.Triggers>
                                <DataTrigger TargetType="StackLayout"
                                     Binding="{Binding shippingMedhod}"
                                     Value="ClickCollect">
                                    <Setter Property="IsVisible" Value="True"/>
                                </DataTrigger>
                            </StackLayout.Triggers>

                            <Label Text="{x:Static resources:AppResources.AccountInformationViewEmail}"
            TextColor="Black"
           Padding="10"
               BackgroundColor="#dedede"
           FontSize="Body"
            />
                            <Label Text="{x:Static resources:AppResources.CheckoutViewEmailToSendReceipt}" Margin="10,0"/>
                            <Entry Text="{Binding email}"/>

                        </StackLayout>


                        <StackLayout Margin="0,10,0,0">

                            <StackLayout.Triggers>
                                <DataTrigger TargetType="StackLayout" Binding="{Binding Source={x:Reference emailStack}, Path= IsVisible}"
                                     Value="true">
                                    <Setter Property="IsVisible" Value="False"/>
                                </DataTrigger>
                            </StackLayout.Triggers>


                            <Label Text="{x:Static resources:AppResources.CheckoutViewHomeDelivery}"
            TextColor="Black"
           Padding="10"
               BackgroundColor="#dedede"
           FontSize="Body"
            />

                            <Label Text="{Binding shippingAddressName}" TextColor="Black" Margin="10,0"/>
                            <Label Text="{Binding ShippingAddressDesc}" Margin="10,0"/>

                            <StackLayout >

                                <StackLayout.Triggers>
                                    <DataTrigger TargetType="StackLayout" Binding="{Binding CardNumber,Converter={StaticResource StringToBoolConverter}}"
                                     Value="false">
                                        <Setter Property="IsVisible" Value="False"/>
                                    </DataTrigger>
                                </StackLayout.Triggers>

                                <Label Text="{x:Static resources:AppResources.CheckoutViewPayCreditCard}"
            TextColor="Black"
           Padding="10"
                           Margin="0,10,0,0"
               BackgroundColor="#dedede"
           FontSize="Body"
            />

                                <Label Text="{Binding CardNumber}" TextColor="Black" Margin="10,0"/>
                                <Label Text="{Binding CardDesc}" Margin="10,0"/>

                                <Label Text="{x:Static resources:AppResources.CheckoutViewBillingAddress}"
                           Margin="0,10,0,0"
            TextColor="Black"
           Padding="10"
               BackgroundColor="#dedede"
           FontSize="Body"
            />

                                <Label Text="{Binding billingAddressName}" TextColor="Black" Margin="10,0"/>
                                <Label Text="{Binding BillingingAddressDesc}" Margin="10,0"/>

                            </StackLayout>

                        </StackLayout>


                        <StackLayout>

                            <Label Text="{x:Static resources:AppResources.ActionbarCoupon}"
            TextColor="Black"
           Padding="10"
               BackgroundColor="#dedede"
           FontSize="Body"
            />

                            <StackLayout Orientation="Horizontal" Margin="10,0,10,0" IsVisible="false">

                                <StackLayout.Triggers>
                                    <DataTrigger    TargetType="StackLayout" Binding="{Binding SelectedCoupon,TargetNullValue=null}"
                                            Value="null">
                                        <Setter Property="IsVisible" Value="true"/>
                                    </DataTrigger>
                                </StackLayout.Triggers>

                                <Label Text="{x:Static resources:AppResources.txtSelectCode}" VerticalOptions="Center" HorizontalOptions="FillAndExpand"/>

                                <Button HorizontalOptions="End" Text="{x:Static resources:AppResources.txtViewCoupons}" x:Name="viewOfferBtn" Clicked="viewOfferBtn_Clicked"
                            CornerRadius="20"  Padding="0" BackgroundColor="#06A9B1"/>


                            </StackLayout>


                            <StackLayout Orientation="Horizontal" Margin="10,0,10,0" IsVisible="true">
                                <StackLayout.Triggers>
                                    <DataTrigger    TargetType="StackLayout" Binding="{Binding SelectedCoupon,TargetNullValue=null}"
                                            Value="null">
                                        <Setter Property="IsVisible" Value="false"/>
                                    </DataTrigger>
                                </StackLayout.Triggers>

                                <Label HorizontalOptions="FillAndExpand">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="Code "/>
                                            <Span Text="{Binding SelectedCoupon.CouponID}" FontSize="Body" FontAttributes="Bold"/>
                                            <Span Text=" "/>
                                            <Span Text="{x:Static resources:AppResources.txtApplied}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>

                                <StackLayout HorizontalOptions="End">
                                    <Label Text="{Binding SelectedCoupon.CouponValue,StringFormat='-{0:0.00}'}"/>
                                    <Label Text="{x:Static resources:AppResources.RemoveTxt}" TextColor="OrangeRed" x:Name="removeOfferBtn">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="removeOfferBtn_Tapped"/>
                                        </Label.GestureRecognizers>
                                    </Label>
                                </StackLayout>


                            </StackLayout>

                        </StackLayout>

                        <Label Text="{x:Static resources:AppResources.CheckoutViewTotalHeader}"
            TextColor="Black"
           Padding="10"
               BackgroundColor="#dedede"
           FontSize="Body"
            />

                        <Grid  Margin="10,10,20,10" ColumnDefinitions="7*,3*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,0.7,Auto">


                            <Grid.Resources>
                                <Style TargetType="Label">
                                    <Setter Property="LineHeight" Value="1.8"/>
                                    <Setter Property="TextColor" Value="Black"/>
                                    <Setter Property="HorizontalOptions" Value="End"/>

                                </Style>
                            </Grid.Resources>

                            <Label Text="{x:Static resources:AppResources.CheckoutViewSubtotal}"
                       Grid.Row="0" Grid.Column="0"
                       
                       FontSize="Body"/>
                            <Label Text="{Binding totalSubtotal}"
                       Grid.Row="0" Grid.Column="1"
                       FontSize="Body"/>
                            <Label Text="{x:Static resources:AppResources.CheckoutViewShipping}"
                       Grid.Row="1" Grid.Column="0"
                       FontSize="Body"/>
                            <Label Text="{Binding totalShipping}"
                       Grid.Row="1" Grid.Column="1"
                       FontSize="Body"/>
                            <Label Text="{x:Static resources:AppResources.CheckoutViewVAT}"
                       Grid.Row="2" Grid.Column="0"
                       FontSize="Body"/>
                            <Label Text="{Binding totalVAT}"
                       Grid.Row="2" Grid.Column="1"
                       FontSize="Body"/>
                            <Label Text="{x:Static resources:AppResources.CheckoutViewDiscount}"
                       Grid.Row="3" Grid.Column="0"
                       FontSize="Body"/>
                            <Label Text="{Binding totalDiscount}"
                       Grid.Row="3" Grid.Column="1"
                       FontSize="Body"/>

                            <Label TextColor="{DynamicResource My_Button_Color}"
                       Grid.Row="4" Grid.Column="0"
                       FontSize="Medium">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="Promo - "/>
                                        <Span Text="{Binding SelectedCoupon.CouponID}"/>
                                    </FormattedString>
                                </Label.FormattedText>

                                <Label.Triggers>
                                    <DataTrigger    TargetType="Label" Binding="{Binding SelectedCoupon,TargetNullValue=null}"
                                            Value="null">
                                        <Setter Property="IsVisible" Value="false"/>
                                    </DataTrigger>
                                </Label.Triggers>

                            </Label>

                            <Label Text="{Binding SelectedCoupon.CouponValue,StringFormat='{0:0.00}'}"
                       Grid.Row="4" Grid.Column="1"
                       FontSize="Body" TextColor="{DynamicResource My_Button_Color}">
                                <Label.Triggers>
                                    <DataTrigger    TargetType="Label" Binding="{Binding SelectedCoupon,TargetNullValue=null}"
                                            Value="null">
                                        <Setter Property="IsVisible" Value="false"/>
                                    </DataTrigger>
                                </Label.Triggers>

                            </Label>

                            <BoxView Grid.Row="5" Grid.ColumnSpan="2" HeightRequest="0.5" BackgroundColor="Silver"/>

                            <Label Text="{Binding Source= {x:Static resources:AppResources.CheckoutViewTotal},StringFormat='Grand {0} (EGP)'}"
                       Grid.Row="6" Grid.Column="0"
                       FontSize="Body"/>
                            <Label Text="{Binding totalTotal}" 
                       Grid.Row="6" Grid.Column="1"
                       FontSize="Medium"/>


                        </Grid>

                        <Button BackgroundColor="{StaticResource My_Button_Color}"
                    Margin="10" 
                    x:Name="placeOrderbtn"
                    Clicked="placeOrderbtn_Clicked"
                    Text="{x:Static resources:AppResources.CheckoutViewOrder}"
                    FontSize="Medium"/>


                    </StackLayout>
                    <!--#endregion-->

                </Grid>
               

            </ScrollView>

        </Grid>
       






        <controls1:LoadingView AbsoluteLayout.LayoutBounds="0.5,0.5,1,1"
               AbsoluteLayout.LayoutFlags="All" IsVisible="False">
            <controls1:LoadingView.Triggers>
                <DataTrigger TargetType="controls1:LoadingView"
                             Binding="{Binding IsPageEnabled}"
                             Value="true">
                    <Setter Property="IsVisible" Value="True"/>

                </DataTrigger>
            </controls1:LoadingView.Triggers>

        </controls1:LoadingView>

    </AbsoluteLayout>




</ContentPage>